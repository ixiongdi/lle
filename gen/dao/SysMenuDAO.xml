<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="fun.xruo.lle.demo.dao.SysMenuDAO">

    <sql id="whereClause">
            <if test="null != id">
                and id = id
            </if>
            <if test="null != parentId">
                and parent_id = parentId
            </if>
            <if test="null != name">
                and name = name
            </if>
            <if test="null != url">
                and url = url
            </if>
            <if test="null != type">
                and type = type
            </if>
            <if test="null != icon">
                and icon = icon
            </if>
            <if test="null != orderNum">
                and order_num = orderNum
            </if>
            <if test="null != perms">
                and perms = perms
            </if>
            <if test="null != createTime">
                and create_time = createTime
            </if>
            <if test="null != updateTime">
                and update_time = updateTime
            </if>
            <if test="null != deleted">
                and deleted = deleted
            </if>
    </sql>

    <sql id="updateClause">
        <set>
                        <if test="null != parentId">
                            and parent_id = parentId
                        </if>
                        <if test="null != name">
                            and name = name
                        </if>
                        <if test="null != url">
                            and url = url
                        </if>
                        <if test="null != type">
                            and type = type
                        </if>
                        <if test="null != icon">
                            and icon = icon
                        </if>
                        <if test="null != orderNum">
                            and order_num = orderNum
                        </if>
                        <if test="null != perms">
                            and perms = perms
                        </if>
                        update_time = CURRENT_TIMESTAMP(),
        </set>
    </sql>

    <sql id="baseColumns">
            parent_id,
            name,
            url,
            type,
            icon,
            order_num,
            perms    </sql>

    <sql id="fullColumns">
            id,

            parent_id,

            name,

            url,

            type,

            icon,

            order_num,

            perms,

            create_time,

            update_time,

            deleted

    </sql>

    <sql id="selectClause">
            id as id,
            parent_id as parentId,
            name as name,
            url as url,
            type as type,
            icon as icon,
            order_num as orderNum,
            perms as perms,
            create_time as createTime,
            update_time as updateTime,
            deleted as deleted
    </sql>

    <insert id="insert" parameterType="sys_menu">
        INSERT INTO sys_menu (<include refid="baseColumns"></include>)
        VALUES (
            #{parentId},
            #{name},
            #{url},
            #{type},
            #{icon},
            #{orderNum},
            #{perms}        )
    </insert>

    <insert id="insertBatch" parameterType="list">
        INSERT INTO sys_menu (<include refid="baseColumns"></include>)
        VALUES
        <foreach item="item" index="index" collection="list" open="" separator="," close="">
            (
            id,
            
            parentId,
            
            name,
            
            url,
            
            type,
            
            icon,
            
            orderNum,
            
            perms,
            
            createTime,
            
            updateTime,
            
            deleted
            )
        </foreach>
    </insert>

    <select id="select" parameterType="sys_user" resultType="sys_menu">
        SELECT
        <include refid="selectClause"></include>
        FROM sys_menu
        <where>
            <include refid="whereClause"></include>
        </where>
    </select>

    <select id="selectById" parameterType="long" resultType="sys_menu">
        SELECT
        <include refid="selectClause"></include>
        FROM sys_menu
        WHERE id = #{id}
    </select>

    <select id="selectBatchByIds" parameterType="list" resultType="sys_menu">
        SELECT
        <include refid="selectClause"></include>
        FROM sys_menu
        WHERE id in
        <foreach item="item" index="index" collection="ids" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

    <select id="selectBatchByArgs" parameterType="map" resultType="sys_menu">
        SELECT
        <include refid="selectClause"></include>
        FROM sys_menu
        <where>
            <include refid="whereClause"></include>
        </where>
    </select>

    <select id="count" parameterType="sys_menu" resultType="long">
        SELECT COUNT(*) FROM sys_menu
        <where>
            <include refid="whereClause"></include>
        </where>
    </select>

    <select id="countByArgs" parameterType="map" resultType="long">
        SELECT COUNT(*) FROM sys_menu
        <where>
            <include refid="whereClause"></include>
        </where>
    </select>

    <update id="update" parameterType="sys_menu">
        UPDATE sys_user
        <include refid="updateClause"></include>
        WHERE id =  #{id}
    </update>

    <update id="updateById">
        UPDATE sys_user
        <include refid="updateClause"></include>
        WHERE id =  #{id}
    </update>

    <update id="updateBatchByIds">
        UPDATE sys_menu
        <include refid="updateClause"></include>
        WHERE id in
        <foreach item="item" index="index" collection="ids" open="(" separator="," close=")">
            #{item}
        </foreach>
    </update>

    <update id="updateBatchByArgs" parameterType="map">
        UPDATE sys_menu
        <include refid="updateClause"></include>
        <where>
            <include refid="whereClause"></include>
        </where>
    </update>

    <delete id="delete" parameterType="sys_menu">
        DELETE FROM sys_menu
        <where>
            <include refid="whereClause"></include>
        </where>
    </delete>

    <delete id="deleteById" parameterType="long">
        DELETE FROM sys_menu WHERE id = #{id}
    </delete>

    <delete id="deleteBatchByIds" parameterType="list">
        DELETE FROM sys_menu WHERE id in
        <foreach item="item" index="index" collection="ids" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <select id="deleteBatchByArgs" parameterType="map">
        DELETE FROM sys_menu
        <where>
            <include refid="whereClause"></include>
        </where>
    </select>


</mapper>